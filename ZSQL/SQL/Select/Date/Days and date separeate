

select to_char(date'2018-01-01', 'DAY') full_name,  
       to_char(date'2018-01-01', 'DY') abbreviation,  
       to_char(date'2018-01-01', 'D') day_of_week  
from   dual
--------------------------

SELECT 
to_char(TO_DATE('01-APR-2020', 'DD-MON-YYYY'), 'DD'),
to_char(TO_DATE('01-APR-2020', 'DD-MON-YYYY'), 'MON'),
to_char(TO_DATE('01-APR-2020', 'DD-MON-YYYY'), 'YYYY')
from dual;

-- Month First day and last day 
SELECT trunc(sysdate,'MONTH'), last_day(sysdate) FROM dual;
